<Page x:Class="Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pages"
      xmlns:userControl="clr-namespace:UserControls"
      xmlns:vm="clr-namespace:ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="MainPage">
    
    <Page.DataContext>
        <vm:MainPageViewModel/>
    </Page.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About the program"/>
            </MenuItem>
        </Menu>

        <userControl:DepartmentView Grid.Column="0" DataContext="{Binding DepartmentViewModel}"/>
        
    </DockPanel>
</Page>
