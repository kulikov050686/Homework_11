<UserControl x:Class="UserControls.SupervisorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="75" 
             d:DesignWidth="400">

    <GroupBox Header="{Binding TitleUC, RelativeSource={RelativeSource AncestorType=local:SupervisorUserControl}}">
        <Grid DataContext="{Binding SupervisorUC, RelativeSource={RelativeSource AncestorType=local:SupervisorUserControl}}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>                
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Grid.Column="0" 
                       Text="Имя" 
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1" 
                       Grid.Column="0"
                       Text="{Binding Name}" 
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="0" 
                       Grid.Column="1" 
                       Text="Фамилия" 
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1" 
                       Grid.Column="1" 
                       Text="{Binding Surname}" 
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="0" 
                       Grid.Column="2" 
                       Text="Возраст" 
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1" 
                       Grid.Column="2" 
                       Text="{Binding Age}" 
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="0" 
                       Grid.Column="3" 
                       Text="Зарплата" 
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1" 
                       Grid.Column="3" 
                       Text="{Binding Salary}" 
                       HorizontalAlignment="Center"/>
        </Grid>
    </GroupBox>
</UserControl>
