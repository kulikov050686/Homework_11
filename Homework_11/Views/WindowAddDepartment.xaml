<Window x:Class="Views.WindowAddDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="160" 
        Width="300" 
        ResizeMode="NoResize" 
        Topmost="True" 
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="5 5 5 5">

        <TextBlock Text="Название" FontSize="16" Margin="0 5 0 5" HorizontalAlignment="Center"/>
        <TextBox Text="{Binding NameDepartment}" FontSize="16" Margin="0 5 0 5"/>

        <Grid Height="30" Margin="0 10 0 0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Command="{Binding Add}"
                    Content="Добавить" 
                    Margin="10 0 10 0"/>

            <Button Grid.Column="1"
                    Command="{Binding Cancel}"
                    Content="Отмена" 
                    Margin="10 0 10 0"/>

        </Grid>

    </StackPanel>
</Window>
